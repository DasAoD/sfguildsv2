!/storage/import/archive/.gitkeep
!/storage/import/failed/.gitkeep
!/storage/import/incoming/.gitkeep
!/storage/import/processing/.gitkeep

/storage/sf_reports/**
!/storage/sf_reports/.gitkeep
!/storage/sf_reports/temp/.gitkeep

guild_*.webp

# --- allgemeine Logs/Locks ---
*.log
*.lock

# --- Editor/OS ---
.DS_Store
Thumbs.db
.idea/
.vscode/
*.swp

# --- Leere Ordner beibehalten ---
!.gitkeep

